let mapleader=" "
set encoding=UTF-8
set guifont=JetBrainsMono\ Nerd\ Font\ Mono\ Regular\ 10
set backspace=indent,eol,start
let g:wrapText=0

"clipboard
imap <C-v> <C-r>0
vmap <C-c> :'<,'> :w !wl-copy<Cr><Cr>

" go to last line
if has("autocmd")
    au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif

"indent
set autoindent
filetype indent on
filetype plugin on
filetype plugin indent on
set omnifunc=syntaxcomplete#Complete

function! Kformat()
    let line = line('.')
    :norm gg=G
    :exec line
endfunction
map <F5> :call Kformat()<Cr> :call Format()<Cr>

"general mapping
map <C-Esc> :Format()
nmap <Esc><Esc> :w<Cr>
map <leader> @q
nmap <F9> :Ranger<Cr>

"splits
set splitbelow splitright
map <C-h> <C-w>h
map <C-l> <C-w>l
map <C-k> <C-w>k
map <C-j> <C-w>j
nmap <Up> <C-w>+
nmap <Down> <C-w>-
nmap <Left> <C-w><
nmap <Right> <C-w>>

"numbers
set number norelativenumber
map <F2> :set number! norelativenumber<Cr>
map <F3> :set number relativenumber!<Cr>

" general options
set showmode
set showcmd
syntax on
set mouse=i
set confirm
set so=8 "cursor above 8 lines from the bottom of the screen
set wildmenu "bottom menu autocompletion
set ruler

"color column
set colorcolumn=0
function SetColorColumn()
    if &colorcolumn == 0
        set colorcolumn=80
    else
        set colorcolumn=0
    endif
    echo &colorcolumn
endfunction
nmap <F10> :call SetColorColumn()<Cr>
nmap <C-F10> :set colorcolumn=

"search
set ignorecase
set smartcase
set nohlsearch
set incsearch
set showmatch
map <F4> :set hlsearch!<Cr>

"indent
set smartindent
set expandtab
set smarttab
set shiftwidth=4

"statusline
set laststatus=2
set statusline+=%f

"spelling
function SetSpell()
    if &spell == 0
        set spell spelllang=it
    else
        if &spelllang ==# 'it'
            set nospell
            set spell spelllang=en
        else
            set nospell
        endif
    endif
endfunction
map <F6> :call SetSpell()<Cr>

"format to 80 char
function! Format()
    let line = line('.')
    :norm ggVGgq
    :exec line
endfunction

"Plugins
call plug#begin('~/.vim/plugged')
"--dependencies
Plug 'google/vim-maktaba'
Plug 'ryanoasis/vim-devicons'
"--appearance
Plug 'itchyny/lightline.vim'
"---utility
Plug 'sheerun/vim-polyglot'
Plug 'junegunn/goyo.vim', { 'on': 'Goyo' }
Plug 'terryma/vim-multiple-cursors'
Plug 'kien/ctrlp.vim', { 'on': 'CtrlP' }
Plug 'francoiscabrol/ranger.vim', { 'on': 'Ranger' }
Plug 'scrooloose/nerdtree', { 'on': 'NERDTreeToggle' }
Plug 'airblade/vim-gitgutter'
Plug 'unblevable/quick-scope'
"---Programming
Plug 'ap/vim-css-color'
Plug 'jiangmiao/auto-pairs'
Plug 'scrooloose/nerdcommenter'
Plug 'tpope/vim-surround'
Plug 'neoclide/coc.nvim', {'branch': 'release' }
Plug 'nathanaelkane/vim-indent-guides'
Plug 'adelarsq/vim-matchit'
Plug 'arp242/jumpy.vim'
"---languages
Plug 'vim-scripts/taglist.vim', {'on': ['TlistToggle', 'TlistOpen']}
Plug 'vim-scripts/a.vim', { 'for': ['c',  'cpp'] }
Plug 'othree/xml.vim', { 'for': ['xml', 'html'] }
Plug 'lervag/vimtex', { 'for': 'tex' }
Plug 'suan/vim-instant-markdown', { 'for': 'markdown' }
Plug 'vim-scripts/dbext.vim', { 'for': 'sql' }
"maybe
"Plug 'bazelbuild/vim-bazel'
"Plug 'justmao945/vim-clang'
"Plug 'scrooloose/syntastic'
call plug#end()

"tabs
noremap <leader>k :tabprevious<Cr>
noremap <leader>j :tabNext<Cr>

" move around
nnoremap E gE
nnoremap <leader>w f 
nnoremap <leader>b F 
